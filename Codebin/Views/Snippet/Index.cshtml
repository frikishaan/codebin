@model IEnumerable<Codebin.Models.Snippet>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-3 mb-3">My Snippets</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary mb-2">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count() > 0)
        {
            @foreach (var item in Model) 
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Language)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {  id=item.Id }, new { @class = "btn btn-primary btn-sm me-2" })
                        @Html.ActionLink("Details", "Details", new {  id=item.Id },  new { @class = "btn btn-secondary btn-sm me-2" })
                        @Html.ActionLink("Delete", "Delete", new {  id=item.Id },  new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No snippets found.</td>
            </tr>
        }
    </tbody>
</table>
